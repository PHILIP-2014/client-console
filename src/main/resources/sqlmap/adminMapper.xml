<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.philip.client.dao.AdminDao">
	<sql id="default_column">
		admin.id,
		admin.appkey,
		admin.name,
		admin.pwd,
		admin.gmt_created as gmtCreated,
		admin.gmt_modified as gmtModified,
		admin.is_active as isActive
	</sql>
	<select id="queryModel" resultType="com.philip.client.model.Admin">
		select
		<include refid="default_column" />
		from admin
		where admin.id=#{id}
	</select>
	<select id="queryModelByLoginName" parameterType="java.lang.String"
		resultType="com.philip.client.model.Admin">
		select
		<include refid="default_column" />
		from admin
		where admin.login_name = #{loginName}
	</select>
	<select id="queryModelByAppKey" parameterType="java.lang.String"
		resultType="com.philip.client.model.Admin">
		select
		<include refid="default_column" />
		from admin
		where admin.app_key = #{appKey}
	</select>
	
	<insert id="insert" parameterType="com.philip.client.model.Admin"
		keyProperty="id">
		insert into admin (
			app_key,
			login_name,
			`password`,
			gmt_created,
			gmt_modified,
			is_active)
		values(
			#{appKey},
			#{loginName},
			#{password},
			now(),now())
	</insert>
	<delete id="delete" parameterType="java.lang.Long">
		delete from admin
		where id = #{id,jdbcType=BIGINT}
	</delete>

	<update id="update" parameterType="com.philip.client.model.Admin">
		update admin
		<set>
			<if test="appKey != null">
				app_key = #{appKey},
			</if>
			<if test="loginName != null">
				login_name = #{loginName},
			</if>
			<if test="password != null">
				`password` = #{password},
			</if>
			<if test="isActive != null">
				is_active = #{isActive},
			</if>
			gmt_modified = now()
		</set>
		where `id` = #{id}
	</update>
	
	<select id="countByAppKey" parameterType="java.lang.String" resultType="java.lang.Integer">
		select count(*) from admin where `app_key` = #{appKey,jdbcType=VARCHAR};
	</select>

</mapper>